<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:minHeight="?android:listPreferredItemHeight"
    >
    <FrameLayout
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:background="#059CBF"
        android:id="@+id/assignment_list_item_indicator"
        android:layout_margin="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">
                <bluescreen1.poat.utils.CustomFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_margin="5dp"
                    android:id="@+id/assignment_list_item_title"
                    android:text="@string/app_name"/>

                <bluescreen1.poat.utils.CustomFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/assignment_list_item_days_remaining"
                    android:textSize="20sp"
                    android:layout_margin="7dp"
                    android:text="@string/app_name"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical" android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">
                <bluescreen1.poat.utils.CustomFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/assignment_list_item_course_code"
                    android:text="@string/app_name"/>

                <bluescreen1.poat.utils.CustomFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/assignment_list_item_due_date"
                    android:text="@string/app_name"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/assignment_list_item_icon_actions"
            android:baselineAligned="false">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp">
            <ImageView android:src="@mipmap/complete"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_width="20dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp">
                <ImageView android:src="@mipmap/submit"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp">
                <ImageView android:src="@mipmap/edit"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>