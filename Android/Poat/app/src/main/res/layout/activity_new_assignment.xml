<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bluescreen1.poat.Assignments.NewAssignment">

    <bluescreen1.poat.utils.CustomFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_assignment"
        android:textSize="25sp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <bluescreen1.poat.utils.CustomFont
        android:text="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/new_assignment_title"/>
    <bluescreen1.poat.utils.CustomFont
        android:text="Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:id="@+id/new_assignment_description"
        android:maxLines="3"/>

    <bluescreen1.poat.utils.CustomFont
        android:text="Course Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_assignment_couse_code_dropdown"/>

    <TextView android:text="Given Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:focusable="false"
        android:inputType="date"
        android:id="@+id/new_assignment_given_date"/>
    <bluescreen1.poat.utils.CustomFont
        android:text="Due Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="match_parent"
        android:focusable="false"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/new_assignment_due_date"
        />
    <bluescreen1.poat.utils.CustomFont
        android:text="Due Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:inputType="time"
        android:singleLine="true"
        android:id="@+id/new_assignment_due_time"
        />
    <bluescreen1.poat.utils.CustomFont
        android:text="Priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:singleLine="true"
        android:id="@+id/new_assignment_priority"/>
        </LinearLayout>
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Save"
            android:id="@+id/new_assignment_save_button"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:id="@+id/new_assignment_cancel_button"/>

    </LinearLayout>

</LinearLayout>
